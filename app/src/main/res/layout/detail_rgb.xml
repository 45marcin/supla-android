<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_rgb_gb">

    <Button
        android:id="@+id/rgbSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/settings2"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rlRgbMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlInfo"
            android:layout_below="@+id/rlTabs"
            android:layout_alignParentTop="false">

            <org.supla.android.SuplaColorBrightnessPicker
                android:id="@+id/rgbPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/clPicker"
                android:layout_centerInParent="true" />

            <org.supla.android.SuplaColorListPicker
                android:id="@+id/clPicker"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

        <org.supla.android.SuplaChannelStatus
            android:id="@+id/rgbstatus"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp" />

        <RelativeLayout
            android:id="@+id/rlInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/rgb_detail_tab_btn_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rgbDetailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rgb_detail_tab_btn_margin"
                    android:layout_marginTop="@dimen/rgb_detail_info_text_margin"
                    android:layout_marginRight="@dimen/rgb_detail_tab_btn_margin"
                    android:layout_marginBottom="@dimen/rgb_detail_info_text_margin"
                    android:text="KONTROLER RGB"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/rgb_detail_title_text"
                    tools:ignore="HardcodedText" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                </LinearLayout>

                <View
                    android:id="@+id/rgbBrightnessLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/rgb_detail_tab_btn_margin"
                    android:layout_marginRight="@dimen/rgb_detail_tab_btn_margin"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/rgbDetailStateCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/rgb_detail_tab_btn_margin"
                        android:layout_marginTop="@dimen/rgb_detail_info_text_margin"
                        android:layout_marginBottom="@dimen/rgb_detail_info_text_margin"
                        android:layout_weight="1"
                        android:text="@string/rgb_state"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/rgb_detail_info_text" />


                    <FrameLayout
                        android:id="@+id/rgbDetailStateImageFrame"
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="@dimen/rgb_detail_tab_btn_margin"
                        android:layout_weight="1">


                        <ImageView
                            android:id="@+id/rgbDetailStateImage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/rgb_detail_state_margin"
                            android:layout_marginBottom="@dimen/rgb_detail_state_margin"
                            android:scaleType="fitEnd"
                            android:src="@drawable/poweroff"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rgb_detail_tab_height"
            android:layout_alignParentTop="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/rgbTabBtn_RGB"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/rgb_detail_tab_btn_height"
                    android:layout_marginLeft="@dimen/rgb_detail_tab_btn_margin"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rgb_left_btn"
                    android:text="RGB"
                    android:textSize="@dimen/rgb_detail_tab_btn_text"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/rgbTabBtn_Dimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/rgb_detail_tab_btn_height"
                    android:layout_marginRight="@dimen/rgb_detail_tab_btn_margin"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rgb_right_sel_btn"
                    android:text="@string/channel_func_dimmer"
                    android:textSize="@dimen/rgb_detail_tab_btn_text" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRgbVLSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vl_settings_bg"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/vlcfgLL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dimming mode" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vlCfgDmAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/vl_left_btn_on"
                    android:text="AUTO"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/vlCfgDm1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/vl_middle_btn_off"
                    android:text="MODE 1" />

                <Button
                    android:id="@+id/vlCfgDm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/vl_middle_btn_off"
                    android:text="MODE 2" />

                <Button
                    android:id="@+id/vlCfgDm3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/vl_right_btn_off"
                    android:text="MODE 3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vlcfgLL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vlcfgLL1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drive" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vlCfgDriveAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/vl_left_btn_on"
                    android:text="AUTO"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/vlCfgDriveYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/vl_middle_btn_off"
                    android:text="YES" />

                <Button
                    android:id="@+id/vlCfgDriveNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/vl_right_btn_off"
                    android:text="NO" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vlcfgLL3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/vlcfgLL2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vlCfgOpRange"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/vl_tab_on"
                    android:text="Operating range"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/vlCfgDrive"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/vl_tab_off"
                    android:text="Drive"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/vl_middle_btn_off"
                android:orientation="vertical">


                <org.supla.android.SuplaRangeCalibrationWheel
                    android:id="@+id/vlCfgCalibrationWheel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="76dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/vllogo" />
    </RelativeLayout>
</RelativeLayout>